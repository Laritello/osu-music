<UserControl x:Class="Osu.Music.UI.UserControls.HotkeyListItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Osu.Music.UI.UserControls"
             mc:Ignorable="d">
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
        <Label Name="LabelName" Width="430" Content="{Binding Type, Converter={StaticResource HotkeyTypeToStringConverter}}"/>
        <Label Name="LabelHotkey" Width="140" Height="30" Content="{Binding Combination}"/>
        <Button Name="ButtonEdit" Width="30" Height="30"/>
    </StackPanel>
</UserControl>
